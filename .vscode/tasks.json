{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build tests",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build",
                "-DBUILD_TESTING=ON"
            ],
            "group": "build"
        },
        {
            "label": "Valgrind: Run core tests",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "${workspaceFolder}/build/Core/core_tests"
            ],
            "group": "none"
        }
    ]
}